{% extends "layout.html.twig" %}
{% block navegacion %}
        <ul class="breadcrumb">
            <li><i class="icon-home"></i><a href=""> Inicio</a> <span class="divider"><i class="icon-angle-right"></i></span></li>
                <li class="active">CONTABLE</li> 
            <li class="moveDown pull-right">
                
                <span class="time"></span>
                <span class="date"></span>
            </li>    
        </ul>
{% endblock navegacion %}



{% block contenido %}
    
    <form action={{ path("balc_new") }} method="post" class="form-horizontal">
            
            <div class="control-group">
              <label class="control-label">{{form_label(form.descripcion)}}</label>
              <div class="controls">                
                {{form_widget(form.descripcion)}} 
              </div>
            </div>  
            
            <div class="control-group">
              <label class="control-label">{{form_label(form.debebal)}}</label>
              <div class="controls">                
                {{form_widget(form.debebal)}} 
              </div>
            </div> 
            
            <div class="control-group">
              <label class="control-label">{{form_label(form.haberbal)}}</label>
              <div class="controls">                
                {{form_widget(form.haberbal)}} 
              </div>
            </div> 

            <div class="control-group">
              <label class="control-label">{{form_label(form.saldo)}}</label>
              <div class="controls">                
                {{form_widget(form.saldo)}} 
              </div>
            </div> 
            <div class="form-actions">
              <a  href="{{path('balc_index') }}"  <button class="btn btn-warning" type="button"> Regresar al Listado</button></a>
              <button type="submit" class="btn btn-success">Insertar</button>
              
            </div>
            {{ form_widget(form) }}

          
    </form>
         
{% endblock contenido %}
