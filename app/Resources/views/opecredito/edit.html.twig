            <li><i class="icon-home"></i><a href=""> Inicio</a> <span class="divider"><i class="icon-angle-right"></i></span></li>
                <li class="active">CONTABLE</li> 
            <li class="moveDown pull-right">
                
                <span class="time"></span>
                <span class="date"></span>
            </li>    
        </ul>
{% endblock navegacion %}



{% block contenido %}
    
    <div id="content">

<div class="container-fluid"> 
    <div class="row-fluid">
      <div class="span6">
        <div class="widget-box">
          <div class="widget-title"> 
            <h5>Operaciones de Cr√©dito</h5>
          </div>
          <div class="widget-content nopadding">
            <form action="{{ path('opecredito_edit',{'id':opecredito.id}) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
              <div class="control-group"    >
                <label class="control-label">{{form_label(edit_form.codoperacion)}}</label>
                <div class="controls">
                  {{form_widget(edit_form.codoperacion)}} 
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">{{form_label(edit_form.descripcion)}}</label>
                <div class="controls">
                 {{form_widget(edit_form.descripcion)}}
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">{{form_label(edit_form.Banco)}}</label>
                <div class="controls">
                  {{form_widget(edit_form.Banco)}}
                </div>
              </div>

              <div class="control-group">
                <label class="control-label">{{form_label(edit_form.fecha)}}</label>
                <div class="controls">
                  {{form_widget(edit_form.fecha)}}
                </div>
              </div>
             
              <div class="control-group">
                <label class="control-label">{{form_label(edit_form.monto)}}</label>
                <div class="controls">
                 {{form_widget(edit_form.monto)}}
                  <span class="help-block">Description field</span> </div>
              </div>

              <div class="control-group">
                <label class="control-label">{{form_label(edit_form.numcuotas)}}</label>
                <div class="controls">
                 {{form_widget(edit_form.numcuotas)}}
                  <span class="help-block">Description field</span> </div>
              </div>

              <div class="control-group">
                <label class="control-label">{{form_label(edit_form.okvigente)}}</label>
                <div class="controls">
                 {{form_widget(edit_form.okvigente)}}
                  <span class="help-block">Description field</span> </div>
              </div>

                   
            
              <div class="form-actions">
                <a  href="{{path('opecredito_index') }}"  <button class="btn btn-warning" type="button"> Regresar al Listado</button></a>  
                <button type="submit" class="btn btn-success">Grabar</button>
                {{ form_widget(edit_form) }}
              </div>
            
            </form>
            {{ form_start(delete_form) }}
                <input type="submit"  class="btn btn-success" value="Eliminar del Listado">
            {{ form_end(delete_form) }}
          </div>
        </div>
     
       
         
{% endblock contenido %}
